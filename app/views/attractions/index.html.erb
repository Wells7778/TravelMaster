<h1>前台首頁</h1>

<div>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>description</th>
        <th>address</th>
        <th>category</th>
        <th>#</th>
      </tr>
    </thead>
    <tbody>
      <% @attractions.each do |attraction| %>
        <tr>
          <td><%= attraction.name %></td>
          <td><%= attraction.description %></td>
          <td><%= attraction.address %></td>
          <td>
            <% attraction.categories.each do |category| %>
              <p><%= category.tag_name %></p>
            <% end %>
          </td>
          <td>
            <%= link_to "Show", admin_attraction_path(attraction) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= javascript_tag do %>
  <%#客製 layout 的變數%>
  $("#mainnav-1").addClass('active');
  $("#sidenav-1").addClass('active');

  $("#nav-bg-img").css("background-image","url(<%= asset_path 'rock.jpg' %>)");
  $("#nav-header-h1").text("想出門走走？馬上開始");
  $("#nav-header-tag").text("找尋景點好幫手");

<% end %>