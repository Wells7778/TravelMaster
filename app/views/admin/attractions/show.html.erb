<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3">
        <%= link_to "景點首頁", admin_attractions_path, target:"_self" %>
      </li>
      <li class="tab col s3">
        <%= link_to "景點新增", new_admin_attraction_path, target:"_self" %>
      </li>
      <li class="tab col s3 disabled">
        <a style="cursor: not-allowed;">景點編輯</a>
      </li>
      <li class="tab col s3">
        <a class="active" style="cursor: not-allowed;">景點呈現</a>
      </li>
    </ul>
  </div>
</div>

<div class="section gray">
  <div class="container">
<h5>景點呈現</h5>
    <div class="card">
      <div class="card-content">
<h3><%= @attraction.name %></h3>
<div>
<% @attraction.categories.each do |category| %>
  <div class="chip"><%= category.tag_name %></div>
<% end %>
</div>
<p><b>地址</b><%= @attraction.address %></p>
<img src="<%= @attraction.image %>" alt="" class="responsive-img">
<p><b>描述</b><%= @attraction.description %></p>

</div>
</div>
</div>
</div>