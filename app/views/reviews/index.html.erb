<div id="reveiws-index" class="section gray">
  <div class="container">

		<div class="center">
      <h4>Reviews－旅程紀錄</h4>
    </div>

  <div class="row">

	  <div class="col s11 offset-m2 m8 review-cards-wrapper">

	  	<% if @reviews && @reviews.length>0 %>
		  	<% @reviews.each do |review| %>
		    <div class="card horizontal reviews-card">
		      <div class="card-image" style="background-image: url('<%= image_path(review.images.first) %>')">
		      	<img src="" alt="" style="width: 300px;height: 300px;">
		      </div>
		      <%= link_to attraction_review_path(review.attraction, review) do %>
			      <div class="card-stacked">
			        <div class="card-content">
			          <p>
			          	[<%= review.attraction.name%>]- <%= review.title%>
			          </p>
			          <label>
			          	<%=review.user.name%>建立於<%=time_ago_in_words review.updated_at %>
			          </label>
			        </div>
		      </div>
		      <%end%>
		    </div>
				<%end %>
			<%end %>

	  </div>

	</div>

	</div>
</div>

<%= javascript_tag do %>
  $(function(){

    <%#客製 layout 的變數%>
    $("#mainnav-2").addClass('active');
    $("#sidenav-2").addClass('active');

    $("#nav-bg-img").css("background-image","url(<%= asset_path 'map.jpg' %>)");
    $("#nav-header-h1").text("紀錄旅程點滴");
    $("#nav-header-tag").text("幫助更多喜愛旅遊的人！");

  })
<% end %>